.chat-side
  .left-header
    .left-header__box
      %p.left-header__box__user-name
        = current_user.name
      .left-header__box__menu
        = link_to new_group_path do
          = fa_icon 'edit', class: "left-header__box__menu--icon"
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog', class: "left-header__box__menu--icon"
  .groups
    - current_user.groups.each do |group|
      .groups__box
        = link_to group_messages_path(group) do
          .groups__box__group-name
            = group.name
        .groups__box__last-message
          = group.show_last_message